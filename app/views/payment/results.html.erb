<h1>Payment Results</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= "%.4f%%" % @apr %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @year%>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= "$%.2f" % @pv %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= @pmt.to_fs(:currency) %>
  </dd>
</dl>

